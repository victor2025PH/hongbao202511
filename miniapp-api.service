[Unit]
Description=MiniApp API (FastAPI/Uvicorn)
After=network.target

[Service]
User=ubuntu
WorkingDirectory=/home/ubuntu/bot
Environment=PYTHONUNBUFFERED=1
Environment=PYTHONPATH=/home/ubuntu
EnvironmentFile=/home/ubuntu/.env
ExecStart=/home/ubuntu/bot/.venv/bin/uvicorn main:app --host 127.0.0.1 --port 8000 --proxy-headers --forwarded-allow-ips="*"
Restart=always
RestartSec=2

[Install]
WantedBy=multi-user.target
