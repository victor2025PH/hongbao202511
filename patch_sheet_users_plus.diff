+<script>
+// 行内编辑：双击进入编辑，Enter 保存，Esc 取消；失焦也保存
+(function () {
+  const table = document.getElementById('sheet-table');
+  if (!table) return;
+
+  function toInput(td) {
+    if (td.classList.contains('editing')) return;
+    const span = td.querySelector('.cell-text');
+    const old = span ? span.textContent : '';
+    td.classList.add('editing');
+    const input = document.createElement('input');
+    input.type = 'text';
+    input.value = old || '';
+    input.className = 'w-full border rounded px-2 py-1';
+    td.innerHTML = '';
+    td.appendChild(input);
+    input.focus();
+    input.select();
+
+    function cancel() {
+      td.classList.remove('editing');
+      td.innerHTML = '<span class="cell-text"></span>';
+      td.querySelector('.cell-text').textContent = old || '';
+    }
+    function commit() {
+      const tr = td.closest('tr');
+      const row = tr ? tr.getAttribute('data-row') : null;
+      const field = td.getAttribute('data-field');
+      const value = input.value || '';
+      if (!row || !field) return cancel();
+      fetch('/admin/sheet-users/inline', {
+        method: 'POST',
+        headers: {'Content-Type': 'application/json'},
+        body: JSON.stringify({row: Number(row), field, value})
+      }).then(r => r.json()).then(j => {
+        if (j && j.ok) {
+          td.classList.remove('editing');
+          td.innerHTML = '<span class="cell-text"></span>';
+          td.querySelector('.cell-text').textContent = value;
+        } else {
+          alert('保存失败：' + (j && j.detail || ''));
+          cancel();
+        }
+      }).catch(e => {
+        alert('网络错误：' + e);
+        cancel();
+      });
+    }
+    input.addEventListener('keydown', (e) => {
+      if (e.key === 'Enter') commit();
+      if (e.key === 'Escape') cancel();
+    });
+    input.addEventListener('blur', commit);
+  }
+
+  table.addEventListener('dblclick', (e) => {
+    const td = e.target.closest('td.editable');
+    if (td) toInput(td);
+  });
+})();
